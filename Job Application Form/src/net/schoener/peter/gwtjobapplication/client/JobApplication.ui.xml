<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<div class="container">
			<h1>Job Application</h1>
			<p>Please enter your information below to apply for a job with us.</p>
			<p class="red">* Required</p>
			<table>
				<tr>
					<h2>Name</h2>
					<g:TextBox ui:field="nameBox"/>
				</tr>
				<tr>
					<h2>Gender</h2>
					<g:RadioButton ui:field="maleButton" ui:name="gender">Male</g:RadioButton><br/>
					<g:RadioButton ui:field="femaleButton" ui:name="gender">Female</g:RadioButton>
				</tr>
				<tr>
					<h2>Email</h2>
					<g:TextBox ui:field="emailBox"/>
				</tr>
				<tr>
					<h2>Phone Number</h2>
					<g:TextBox ui:field="phoneBox"/>
				</tr>
				<tr>
					<h2>Which position(s) are you interested in?</h2>
					<g:CheckBox ui:field="devBox">Java Developer</g:CheckBox><br/>
					<g:CheckBox ui:field="uiBox">UI Designer</g:CheckBox><br/>
					<g:CheckBox ui:field="mktBox">Marketing</g:CheckBox><br/>
					<g:CheckBox ui:field="busBox">Business Analyst</g:CheckBox>
				</tr>
				<tr>
				    <h2>Highest Degree</h2>
				    <g:ListBox ui:field="degreeBox">
				        <g:item value='1'>none</g:item>
				        <g:item value='2'>High School Diploma</g:item>
				        <g:item value='3'>Master's Degree</g:item>
				        <g:item value='4'>Bachelor's Degree</g:item>
				        <g:item value='5'>PhD</g:item>
				    </g:ListBox>
				</tr>
				<tr>
				    <h2>Submit your cover letter or résumé</h2>
				    <g:TextArea ui:field="resumeBox"/>
				</tr>
				<tr>
				    <g:Button ui:field="submitButton">Submit</g:Button>
				</tr>
			</table>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>